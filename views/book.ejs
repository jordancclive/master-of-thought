<html>
  <%- include("./head", {title: name}) %>

  <body>
    <div class="container">
      <div class="navigation_box">
        <h3 class="navigation">
          <% if (prevBook) { %>
            <a href="/books/<%= prevBook.page_name %>"><</a> <% } %> <% if
            (nextBook) { %> | <a href="/books/<%= nextBook.page_name %>"> > </a><%
          } %>
        </h3>
      </div>
      <h1 class="text-center">
        <%= currBook.name %>
      </h1>
      <br>
      <%- include(`./books/${currBook.page_name}.html`, {title: name}) %>
      <%- currBook.book_image %>
      <p><% if (currBook.author.length) { %>by <a href="<%= currBook.author_url %>"><%= currBook.author %></a>, <% } %>
        <% if (currBook.year_completion) { %><%= currBook.year_completion %>, <% } %>
        <% if (currBook.national_origin) { %><%= currBook.national_origin %><% } %></p>
      <p><a href="<%= currBook.audible_url %>">Audible Version</a></p>

      <div class="spacer"></div>

      <%- include("./footer") %>

      <script>
        (function (i, s, o, g, r, a, m) {
          i["GoogleAnalyticsObject"] = r;
          (i[r] =
            i[r] ||
            function () {
              (i[r].q = i[r].q || []).push(arguments);
            }),
            (i[r].l = 1 * new Date());
          (a = s.createElement(o)), (m = s.getElementsByTagName(o)[0]);
          a.async = 1;
          a.src = g;
          m.parentNode.insertBefore(a, m);
        })(
          window,
          document,
          "script",
          "https://www.google-analytics.com/analytics.js",
          "ga"
        );

        ga("create", "UA-92016918-1", "auto");
        ga("send", "pageview");
      </script>
    </div>
  </body>
</html>
