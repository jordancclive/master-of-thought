<html>
  <%- include("./head", {title: name}) %>

  <body>
    <div class="container">
      <%- include("./nav") %>
      <div class="navigation_box">
        <h3 class="navigation">
          <% if (prevBook) { %>
          <a href="/books/<%= prevBook.page_name %>"><</a> <% } %> <% if
          (nextBook) { %> | <a href="/books/<%= nextBook.page_name %>"> > </a><%
          } %>
        </h3>
      </div>
      <h1 class="text-center">
        <%= currBook.name %>
      </h1>
      <br>

      <div class="book-detail">
        <div class="amazon-image">
          <%- currBook.book_image %>
        </div>
        <div class="about-book">
          <h4 class="text-center">About <em><%= currBook.name %></em></h4>
          <p class="text-center">
            <% if (currBook.author.length) { %>
              By <a href="<%= currBook.author_url %>"><%= currBook.author %></a><br>
            <% } %>
            <% if (currBook.year_completion) { %>
              Published <%= currBook.year_completion %><br>
            <% } %>
            <% if (currBook.national_origin) { %>
              <%= currBook.national_origin %>
            <% } %>
            <% if (currBook.audible_url) { %>
              <br>
              <a href="<%= currBook.audible_url %>">Audible Version</a>
            <% } %>
          </p>
        </div>
      </div>
      <br>

      <center>
        <img src="decorativedivider.svg" class="decorative-divider" />
      </center>
      <div class="spacer"></div>

      <h2>Synopsis</h2>
      <br>
      <div class="book-synopses">
        <%- include(`./books/${currBook.page_name}.html`, {title: name}) %>
      </div>
      <div class="spacer"></div>

      <h2>Book List Appearances</h2>
      <ul>
        <% currBook._book_lists.forEach(ele => { %>
        <li>
          <%= ele.list_source %>'s
          <a href="<%= ele.list_url%>"><%= ele.list_name%></a>
        </li>
        <% }) %>
      </ul>

      <%- include("./footer") %>
    </div>
  </body>
</html>
